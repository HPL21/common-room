{
  "rules": {
    ".read": false,
    ".write": false,
    "players": {
      "$playerID": {
        ".read": true,
        ".write": "$playerID === auth.uid"
      }
    },
    "rooms": {
      ".read": true,
      ".write": true,
      "$roomName": {
        ".read": "root.child('players').child(auth.uid).child('room').val() === $roomName",
        ".write": "root.child('players').child(auth.uid).child('room').val() === $roomName",
        "password": {
          ".read": true,
          ".write": true
        },
        "description": {
          ".read": true,
          ".write": true
        }
      }
    }
  }
}